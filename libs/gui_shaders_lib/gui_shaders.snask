// --- EFEITOS INDIVIDUAIS ---

fun round_corners(widget, radius)
    // Radius deve ser string ex: "15px"
    gui::css(".custom-radius-" + radius + " { border-radius: " + radius + "; }");
    gui::add_class(widget, "custom-radius-" + radius);

fun glassmorphism(widget)
    gui::css(".glass { background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.2); box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37); }");
    gui::add_class(widget, "glass");

fun neon_glow(widget, color_hex)
    gui::css(".neon-" + color_hex + " { box-shadow: 0 0 10px " + color_hex + ", 0 0 20px " + color_hex + "; border: 1px solid " + color_hex + "; }");
    gui::add_class(widget, "neon-" + color_hex);

fun elevate(widget)
    gui::css(".elevated { box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23); transition: all 0.3s cubic-bezier(.25,.8,.25,1); } .elevated:hover { box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22); transform: translateY(-2px); }");
    gui::add_class(widget, "elevated");

fun gradient_linear(widget, color1, color2)
    gui::css(".grad-lin { background: linear-gradient(135deg, " + color1 + ", " + color2 + "); }");
    gui::add_class(widget, "grad-lin");

fun text_gradient(widget, color1, color2)
    gui::css(".text-grad { background: linear-gradient(" + color1 + ", " + color2 + "); -webkit-background-clip: text; -webkit-text-fill-color: transparent; }");
    gui::add_class(widget, "text-grad");

