fun pulse(widget)
    gui::css("@keyframes pulse { 0% { transform: scale(1); } 50% { transform: scale(1.05); } 100% { transform: scale(1); } } .animate-pulse { animation: pulse 2s infinite; }");
    gui::add_class(widget, "animate-pulse");

fun fade_in(widget)
    gui::css("@keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } } .animate-fade { animation: fadeIn 0.5s ease-in; }");
    gui::add_class(widget, "animate-fade");

