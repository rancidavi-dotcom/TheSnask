import "prelude";
import "gui";
import "gui_shaders";

class main
    fun start()
        println("==============================================");
        println("   SNASK GUI_SHADERS - SUITE DE TESTES       ");
        println("==============================================");

        // Mock de inicialização (não vai abrir janela em ambiente headless)
        println("Iniciando testes de shaders...");

        // 1. Testando Temas
        gui_shaders::apply_pop_os();
        println("[ OK ] Tema Pop!_OS aplicado.");
        gui_shaders::apply_catppuccin();
        println("[ OK ] Tema Catppuccin aplicado.");

        // 2. Testando Efeitos em Widgets (Mock)
        // Criamos widgets apenas para validar a chamada
        let win = gui::window("Test", 100, 100);
        let btn = gui::button("Test Button");

        gui_shaders::glassmorphism(win);
        println("[ OK ] Glassmorphism aplicado.");
        
        gui_shaders::neon_glow(btn, "#48b9c7");
        println("[ OK ] Neon Glow aplicado.");
        
        gui_shaders::elevate(btn);
        println("[ OK ] Elevate aplicado.");

        // 3. Testando Design e Animações
        gui_shaders::round_corners(btn, "15px");
        println("[ OK ] Round Corners aplicado.");
        
        gui_shaders::pulse(btn);
        println("[ OK ] Pulse Animation aplicada.");
        
        gui_shaders::fade_in(win);
        println("[ OK ] Fade In Animation aplicada.");

        // 4. Testando Utilitários
        gui_shaders::scrollbar_thin();
        println("[ OK ] Scrollbar Style aplicado.");
        
        gui_shaders::tooltip_style();
        println("[ OK ] Tooltip Style aplicado.");

        println("==============================================");
        println("   TODOS OS TESTES DE CHAMADA PASSARAM!      ");
        println("   Lib gui_shaders v" + gui_shaders::version() + " está estável. ");
        println("==============================================");
